	select BR2_PACKAGE_GNUPG2
	select BR2_PACKAGE_GNUPG_GPGV2
	select BR2_PACKAGE_DEBIAN_ARCHIVE_KEYRING
	select BR2_PACKAGE_LIBDEBIAN_INSTALLER
	select BR2_PACKAGE_BZIP2
